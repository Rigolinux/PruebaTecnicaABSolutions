@using Syncfusion.Blazor
@model UserViewCreation
@{
    ViewData["Title"] = "Crear Usuario";
   
}

   <div class="container">
        <div class="text-center">
            <h1> Crear Usuario</h1>
         </div>
            <form  asp-action="Create"  method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-3">
                    <ejs-textbox id="FirstName" placeholder="Nombre" value="FirstName" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
        <ejs-textbox id="LastName" placeholder="Apellido" value="LastName" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
        <ejs-textbox id="Email" placeholder="Correo" value="Email" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <ejs-textbox id="Password" placeholder="Contraseña" type="password" value="Password" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                <ejs-dropdownlist id="BusinessId" dataSource="@Model.businessViews"  placeholder="Seleccione un negocio"  >
                    <e-dropdownlist-fields text="BusinessName" value="BusinessId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
                </div>
                <div class="form-group mt-3 d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Voler a la lista</a>
                        <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
</div>

@section Scripts {
    <script>
        
    </script>
}



