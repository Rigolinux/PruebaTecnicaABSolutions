@model LoginViewModel; 
@{
    Layout = null;
}

<!DOCTYPE html>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PruebaTecnicaABSolutions.styles.css" asp-append-version="true" />

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
      <form asp-controller="Access" asp-action="Login" method="post">
            <h1>Login</h1>
            <input type="email" placeholder="Email" asp-for="Email"/>
            <input type="password" placeholder="PassWord" asp-for="Password"/>

            <label>
            <input type="checkbox" asp-for="KeepLogin" />
            Keep me logged In.
            </label>
            <button type="submit">Login</button>

            @if (ViewData["ValidateMessage"] != null)
            {
                <br />
                <br />
                <label>@ViewData</label>
            }
    </form>

    
</body>
</html>
