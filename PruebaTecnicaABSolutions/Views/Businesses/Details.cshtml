@model PruebaTecnicaABSolutions.Models.Business
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;

@{
    ViewData["Title"] = "Detalle Negocio";
    string? connectionId = HttpContextAccessor?.HttpContext?.Connection.Id;
    var Claims = HttpContextAccessor?.HttpContext?.User.Claims.ToList();
    string role = "";
}


<div>
    <h1>Detalle </h1>
    <hr />
    <div class="invisible">      
        <input type="hidden" asp-for="BusinessId" />
    </div>
    <ejs-textbox id="BusinessName" placeholder="Nombre del negocio" value="@Model.BusinessName" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="Description" placeholder="Descripción" value="@Model.Description" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="CreationDate" placeholder="Fecha de Creación" value="@Model.CreationDate" format="dd/MM/yyyy" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="Address" placeholder="Dirección" value="@Model.Address" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="Email" placeholder="Email" value="@Model.Email" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="Phone" placeholder="Teléfono" value="@Model.Phone" floatLabelType="Always" readonly="true"></ejs-textbox>

</div>
<div class="mt-3 d-flex justify-content-between">
    @if(role == "1")
    {
    <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
        
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.BusinessId">Editar</a>
    }
</div>
