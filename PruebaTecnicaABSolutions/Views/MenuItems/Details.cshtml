@model MenuItemView

@{
    ViewData["Title"] = "Detalle Item";
}

<h1>Detalle </h1>
<hr />
<div class="container">
    <ejs-textbox id="ItemId" placeholder="ID del ítem" value="@Model.ItemId" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="ItemName" placeholder="Nombre del ítem" value="@Model.ItemName" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="Description" placeholder="Descripción" value="@Model.Description" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="Price" placeholder="Precio" value="@Model.Price" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="BusinessId" placeholder="ID del negocio" value="@Model.BusinessId" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="AddedDate" placeholder="Fecha de agregado" value="@Model.AddedDate" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="CategoryName" placeholder="Nombre de la categoría" value="@Model.CategoryName" floatLabelType="Always" readonly="true"></ejs-textbox>
    <ejs-textbox id="BusinessName" placeholder="Nombre del negocio" value="@Model.BusinessName" floatLabelType="Always" readonly="true"></ejs-textbox>

        
</div>
<div class="mt-3 d-flex justify-content-between">
    <a class="btn btn-secondary"  asp-action="Index">Volver a la Lista</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ItemId">Editar</a> 
</div>

