@model MenuItemViewUpdate

@{
   
}



<h4> Editar Item </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="invisible">
                <input type="hidden" asp-for="ItemId" />
                <input type="hidden" asp-for="BusinessId" />

            </div>
            <div class="form-group mt-3">
                <ejs-textbox id="ItemName" placeholder="Nombre del ítem" value="@Model.ItemName" floatLabelType="Always"></ejs-textbox>
             </div>
            <div class="form-group mt-3">
                <ejs-textbox id="Description" placeholder="Descripción" value="@Model.Description" floatLabelType="Always"></ejs-textbox>
             </div>
            <div class="form-group mt-3">
                <ejs-textbox id="Price" placeholder="Precio" value="@Model.Price" floatLabelType="Always"></ejs-textbox>
             </div>
            <div class="form-group mt-3">
                @if (Model.menuCategoryViews != null && Model.menuCategoryViews.Any())
                {
                    <ejs-dropdownlist id="CategoryId" floatLabelType="Always" value="@Model.CategoryId" dataSource="@Model.menuCategoryViews" placeholder="Seleccione una categoria">
                        <e-dropdownlist-fields text="CategoryName" value="CategoryId"></e-dropdownlist-fields>
                    </ejs-dropdownlist>

                }
             </div>
            <div class="form-group mt-3 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Voler a la lista</a>
                <button type="submit" class="btn btn-primary">Actualizar </button>
            </div>


        </form>
    </div>
</div>

