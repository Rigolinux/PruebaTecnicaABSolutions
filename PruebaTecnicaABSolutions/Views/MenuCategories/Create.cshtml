@model MenuCategoryViewCreation

@{
    ViewData["Title"] = "Crear Menu Categoria";
}

<h4>Crear Menu Categoria</h4>
<hr />
<div class="container">
   
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                @if (Model.businessViews != null && Model.businessViews.Any())
                {
                    <ejs-dropdownlist id="BusinessId" value="@Model.BusinessId" dataSource="@Model.businessViews" placeholder="Seleccione un negocio">
                        <e-dropdownlist-fields text="BusinessName" value="BusinessId"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                }
            </div>
            <div class="form-group mt-3 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Voler a la lista</a>
                <button type="submit" class="btn btn-primary">Crear </button>
            </div>
        </form>
    
</div>




